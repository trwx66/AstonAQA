<configuration>
    <!-- Console Appender to output logs to the console -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yy HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger configuration for all classes -->
    <logger name="org.example" level="INFO"/> <!-- Example for your application's package -->

    <!-- Root logger configuration to output other logs -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
